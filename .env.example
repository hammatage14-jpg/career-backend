# Server
NODE_ENV=development
PORT=5000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.xxxxx.mongodb.net/DATABASE?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# First admin: set this email to grant admin role when they register (optional)
ADMIN_EMAIL=admin@example.com

# Frontend (for CORS & redirects) and email verification redirect
FRONTEND_URL=http://localhost:3000

# Backend public URL (for verification link in emails)
BACKEND_URL=http://localhost:5000

# SMTP (for verification emails). Gmail: use App Password, SMTP_HOST=smtp.gmail.com, SMTP_PORT=587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Google OAuth (use the SAME Web application client ID in frontend VITE_GOOGLE_CLIENT_ID)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Cloudinary (file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Paystack (live keys from dashboard.paystack.com â€” Settings > API Keys & Webhooks)
PAYSTACK_PUBLIC_KEY=pk_live_xxx
PAYSTACK_SECRET_KEY=sk_live_xxx
# In Paystack dashboard set Webhook URL to: https://your-backend-domain.com/api/applications/paystack-webhook
# Optional: override callback URL after payment (default: FRONTEND_URL/app/applications)
PAYSTACK_CALLBACK_URL=
